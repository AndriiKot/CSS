maxElements = 65
step = 20
positionElementFirst = 0
sizeSnowball = 10


size(n = sizeSnowball)
  width n px
  height n px

* 
box-sizing border-box

body {
    background-color: rgb(51, 94, 164);
    position: relative;
}

[class|=snowball]{
    position absolute;
    top: 0;
    left: 0;
    size()
    background: white;
    border-radius: 50%;
}

for num in (1..maxElements)
  .snowball-{num}
    left positionElementFirst px
  positionElementFirst += step

    