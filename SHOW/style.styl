maxElements = 65
stepDistance = 20
stepAnimationDelay = 0.5
animationDelay = 0
positionElementFirst = 0
sizeSnowball = 10


size(n = sizeSnowball)
  width n px
  height n px

* 
box-sizing border-box

body {
    background-color: rgb(51, 94, 164);
    position: relative;
}

[class|=snowball]{
    position absolute;
    top: 0;
    left: 0;
    size()
    background: white
    border-radius: 50%
    opacity 0
    animation snowballRain 3s infinite
}

for num in (1..maxElements)
    .snowball-{num}
      left positionElementFirst px
      animation-delay animationDelay s //mixin-animation-delay(num) s
    positionElementFirst += stepDistance
    animationDelay += stepAnimationDelay

mixin-animation-delay()
    if num % 5 == 0
      return 0
    return 0.3


@keyframes snowballRain {
    0% {
        opacity 0
        top 0
        }
    30% {
        opacity 1
        }
    70% {
        opacity 1
        }
    100% {
        opacity 0
        top: 100vh
        }
}

    