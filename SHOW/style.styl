maxElements = 1
stepDistance = 20
animationDelay = 0
positionElementFirst = 0
sizeSnowball = 10

size(n = sizeSnowball)
  width n px
  height n px

body {
    background-color: rgb(51, 94, 164);
    position: relative;
    width 100%
    height 100%
}

[class|=snowball-start] 
[class|=snowball-end] {
    position absolute;
    top: 0;
    left: 0;
    size()
    background: white
    border-radius: 50%
    opacity 1
    animation snowballStartRain 5s ease-in-out infinite
}


mixin-animation-delay(arg = 0)
    for num in (7..1)
        if arg % num == 0
            return num * 0.1
    return 0.0

for num in (1..maxElements)
    .snowball-start-{num}
    .snowball-end-{num}
      left positionElementFirst px
    positionElementFirst += stepDistance
    .snowball-start-{num}
      animation-delay animationDelay s
    animationDelay = (mixin-animation-delay(num))
    .snowball-end-{num}
        background-color: red
        animation-delay animationDelay s
    animationDelay = mixin-animation-delay(num) + 2.0


@keyframes snowballStartRain {
    0% {
        opacity 0
        }
    30% {
        opacity 1
        }
    70% {
        opacity 1
        }
    100% {
        opacity 0
        top: 90vh
        }
}

    